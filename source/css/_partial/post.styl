
.sblog_post {
	padding: 0px 0px 10px 0px;
}

.sblog_post_topic {
	border-bottom: 1px color-link solid;
	padding: 4px 0px 0px 0px;
}

.sblog_post_topic h1 {
	color: color-font;
	font-size: 1.2em;
	font-weight: bold;
}

.sblog_post_text {
	background-image: url('../images/bg_block.png');
	background-repeat: repeat-x;
	padding: 4px;
}

.sblog_post_options {
	margin: 10px 0px 20px 0px;
}

.sblog_post_edit {
	color: color-meta;
	font-family: Arial, Helvetica, Verdana, sans-serif;
	font-size: 1em;
}
