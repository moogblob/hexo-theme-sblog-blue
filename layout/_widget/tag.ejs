<% if (site.tags.length) { %>
<div class="sblog_block">
  <div class="sblog_block_topic">
    <h2 class="sblog_block_topic_text"><%= __('tags') %></h2>
  </div>
  <div class="sblog_block_text">
    <ul>
      <% site.tags.sort('name').each(function(item) { %>
        <li><a href="<%- config.root %><%- item.path %>"><%= item.name %></a> <%= item.posts.length %></li>
      <% }); %>
    </ul>
  </div>
</div>
<% } %>
